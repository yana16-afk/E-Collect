<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hazardous"
    android:contentDescription="@string/hazardous"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_hazardous_panel"
    tools:context=".ItemHazardousPanel">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="315dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="736dp"
        android:background="@null"
        android:contentDescription="@string/back_arrow"
        android:foreground="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <!-- Items -->
    <TextView
        android:id="@+id/text_view_hazardous"
        android:layout_width="0dp"
        android:layout_height="310dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="80dp"
        android:gravity="start"
        android:lineSpacingExtra="8dp"
        android:textColor="@android:color/black"
        android:contentDescription="@string/biodegradable_items_header"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>