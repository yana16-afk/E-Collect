<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_loginreg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->

    <!-- E-Collect Text -->

    <ImageView
        android:id="@+id/onboarding_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/onboarding_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/onboarding_bg" />

    <TextView
        android:id="@+id/onboarding_haveacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/onboarding_haveacctxt"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/onboarding_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="@+id/onboarding_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.837" />

    <ImageView
        android:id="@+id/ecollect_txt"
        android:layout_width="299dp"
        android:layout_height="86dp"
        android:contentDescription="@string/onboarding_bg"
        app:layout_constraintBottom_toBottomOf="@+id/onboarding_bg"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_bg"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        app:srcCompat="@drawable/ecollect_text" />

    <!-- Truck Logo -->

    <!-- Text Below Truck Logo -->

    <!-- Get Started Button -->

    <ImageView
        android:id="@+id/truck_logo"
        android:layout_width="wrap_content"
        android:layout_height="293dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:contentDescription="@string/onboarding_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ecollect_txt"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/truck_logo" />

    <Button
        android:id="@+id/button_getstarted"
        android:layout_width="218dp"
        android:layout_height="59dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="#37B943"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/get_started"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button_loginsmall"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/poppins"
        android:text="@string/log_insmall"
        android:textColor="#1098AA"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView_Start"
        android:layout_width="299dp"
        android:layout_height="65dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/main_txtsmall"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_getstarted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/onboarding_bg"
        app:layout_constraintVertical_bias="0.948"
        tools:ignore="TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>