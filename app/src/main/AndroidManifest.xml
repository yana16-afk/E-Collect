<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECollect"
        tools:ignore="ExtraText"
        tools:targetApi="31">
        <activity
            android:name=".HomePage"
            android:exported="false" />
        <!-- Main Activity Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- RegistrationPage Activity -->
        <activity
            android:name=".RegistrationPage"
            android:exported="true" />
        <!-- UserLogin Activity -->
        <activity
            android:name=".UserLogin"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <!-- Item Waste Types -->

        <activity
            android:name=".ItemBiodegradablePanel"
            android:exported="false"/>
        <activity
            android:name=".ItemResidualPanel"
            android:exported="false"/>
        <activity
            android:name=".ItemRecyclablePanel"
            android:exported="false"/>
        <activity
            android:name=".ItemHazardousPanel"
            android:exported="false"/>
        <activity
            android:name=".ItemBulkyPanel"
            android:exported="false"/>

        <!-- User Profile Activity -->
        <activity
            android:name=".UserProfilePanel"
            android:exported="false"/>
    </application>

</manifest>